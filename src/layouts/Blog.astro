---
import Base from "./Base.astro";


const { frontmatter } = Astro.props;
---

<script>
	document.getElementById('true').querySelectorAll('p').forEach(element => {
		element.style.paddingTop = "2em";
	});
</script>

<Base title={frontmatter.title} color='#ca8a04'>

	<main class="">

		<div class="main backdrop-blur-md bg-slate-800 bg-opacity-50">
			<div class="">
				<div class="" id={frontmatter.poem}>
					<h1 class="flex flex-col justify-center">{frontmatter.title}</h1>

					<div class="flex flex-row w-full justify-between text-green">
						<p class="w-min">{frontmatter.author}</p>
						<p class="w-min">{frontmatter.date.slice(0, 10)}</p>
					</div>
					<div class="bg-green-950 w-custom h-[2px]"></div>

					<div class="mt-6">
						<slot />
					</div>
					
				</div>
			</div>
		</div>
		
	</main>
</Base>

<style>
	:root {
		--yellow-600: #ca8a04;
	}
   	* {
		display: block;
		padding: 0;
		margin: 0;
   	}

	.main {
		margin: 6rem 0.2rem 6rem 0.2rem;
		border-width: 2px;
		border-color: var(--yellow-600);
		color: var(--yellow-600);
		border-radius: 1.5rem;
		padding: 1.75rem;
		transition: all 500ms ease-in-out;
	}

	h1 {
		font-weight: 900;
		font-size: larger;
	}

	@media (min-width: 768px) {
		.main {
			margin: 3.75rem 5rem 3.75rem 5rem;
		}
	}

	.w-custom {
		--offset: .5rem;

		width: calc(100% + var(--offset));
		transform: translateX(calc(var(--offset)/-2));
	}
</style>
