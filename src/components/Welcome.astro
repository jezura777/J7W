<style>
    	@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap');

* {
    font-family: 'Fira Code', monospace;
}

.container {
    display: inline-block;
    position: relative;
}


h1::before {
    content: '_';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: #1e293b;
    animation: typewriter 8s steps(26) 1s forwards,
        blink 1s  infinite;
}

@keyframes typewriter {
    to {
        left: 100%
    }
}

@keyframes blink {
    50% {
        color: transparent;
    }
}
</style>