<script>

    var clicked = false;

    function handleOut () {
        if (clicked) {
            clicked = false;
            document.getElementById("nav").style.cssText = null;
        }
    }


    function handleClick () {
        if (clicked) {
            document.getElementById("nav").style.cssText = null;
            clicked = false;
        } else {
            document.getElementById("nav").style.cssText = "transform: translateY(0em); cursor: default;";
            clicked = true;
        }
    }

    document.getElementById("nav").addEventListener("click", handleClick);
    document.getElementById("nav").addEventListener("mouseleave", handleOut);
        
</script>

