---
import Base from '../layouts/Base.astro';


const posts = await Astro.glob("./blog/*.md");
const postsSorted = posts.sort((post) => post.frontmatter.date);

---

<Base title="J7-Blog" color='#d97706a0'>

	<main class="parent gap-5 items-center justify-center w-screen  min-h-screen relative px-5 my-16">
		{postsSorted.map((post) => <a href={post.url} class='relative border-2 w-full border-[#d97706] text-[#d97706] rounded-3xl backdrop-blur-sm gap-5 p-10'>

			<div class="items-center w-max absolute">
				<p>{post.frontmatter.lang}</p>
			</div>

			<h1 class="h-20">{post.frontmatter.title}</h1>
		
		</a>)}

	</main>
</Base>

<style>
	.parent {
		display: grid;
		grid-template-columns: 1fr;
	}

	@media (min-width: 768px) {
    .parent {
        grid-template-columns: 1fr 1fr 1fr;
    }

	.parent-post {
		display: grid;
		grid-template-rows: repeat(3, 1fr);
		grid-column-gap: 0px;
		grid-row-gap: 0px;
	}
}
</style>
